<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.DazzlingDreams"
        tools:targetApi="31">
        <activity
            android:name="com.PowerZone.dazzlingdreams.AddAttendence"
            android:parentActivityName=".MainActivity"
            android:exported="true" />
        <activity
            android:name="com.PowerZone.dazzlingdreams.ShowMembers"
            android:parentActivityName=".MainActivity"
            android:exported="true" />
        <activity
            android:name="com.PowerZone.dazzlingdreams.AddMember"
            android:parentActivityName=".MainActivity"
            android:exported="true" />
        <activity
            android:name="com.PowerZone.dazzlingdreams.ContactUs"
            android:parentActivityName=".MainActivity"
            android:exported="true" />
        <activity
            android:name="com.PowerZone.dazzlingdreams.RegisterActivity"
            android:exported="true" />
        <activity
            android:name="com.PowerZone.dazzlingdreams.LoginPage"
            android:exported="true" />
        <activity
            android:name="com.PowerZone.dazzlingdreams.Splash_Screen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.PowerZone.dazzlingdreams.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>