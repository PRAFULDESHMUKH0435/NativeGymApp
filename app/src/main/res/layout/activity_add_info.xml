<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFEB3B"
    tools:context=".AddInfo">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/splash2"
        tools:layout_editor_absoluteX="12dp" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/animation_view2"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animation_view2">

        <EditText
            android:id="@+id/addmember_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/background"
            android:drawableLeft="@drawable/baseline_account_circle_24"
            android:hint="Enter Name"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColorHint="#000" />

        <EditText
            android:id="@+id/addmember_mobilenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/background"
            android:drawableLeft="@drawable/baseline_remove_red_eye_24"
            android:hint="Enter Mobile Number"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColorHint="#000" />

        <Button
            android:id="@+id/addmember_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="#fff"
            android:padding="12dp"
            android:text="Add Member"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>